<%= render "shared/content_title", title: "Register" %>

<div class="well">
	<%= render "shared/error", obj: @user %>
	<%= form_for @user do |f| %>
	<div class="control-group">
		<%= f.label :username %>
		<%= f.text_field :username %>
	</div>
	<div class="control-group">
		<%= f.label :password %>
		<%= f.password_field :password %>
	</div>
	<%= f.submit "Create User", class: "btn btn-primary" %>
	<% end %>

</div>